<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etDoB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter your birth year"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btGetAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Age"
        app:layout_constraintEnd_toEndOf="@+id/etDoB"
        app:layout_constraintTop_toBottomOf="@+id/etDoB" />

    <TextView
        android:id="@+id/txShowAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/btGetAge"
        app:layout_constraintTop_toBottomOf="@+id/btGetAge" />

</androidx.constraintlayout.widget.ConstraintLayout>
