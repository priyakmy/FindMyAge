<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/etDOB"
        android:layout_width="262dp"
        android:layout_height="56dp"
        android:layout_marginTop="104dp"
        android:ems="10"
        android:hint="Enter your DOB"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteY="148dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/txShowage"
        android:layout_width="218dp"
        android:layout_height="45dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="28dp"
        android:text="Age Show here"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/etDOB"
        app:layout_constraintTop_toBottomOf="@+id/etDOB"
        app:layout_editor_absoluteY="321dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btGetage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="20dp"
        android:text="Get my age"
        app:layout_constraintEnd_toEndOf="@+id/etDOB"
        app:layout_constraintTop_toBottomOf="@+id/txShowage" />

</androidx.constraintlayout.widget.ConstraintLayout>